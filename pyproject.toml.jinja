[tool.poetry]
name = "{{ project_name }}"
version = "{{ project_version }}"
description = "{{ project_description }}"
authors = ["{{ author_name }} <{{ author_email }}>"]
readme = "README.md"

[tool.poetry.dependencies]
python = "^3.11"
fastapi = "^0.121.1"
pydantic = "^2.12.4"
uvicorn = "^0.38.0"
pydantic-settings = {extras = ["aws-secrets-manager"], version = "^2.12.0"}

[tool.poetry.group.test.dependencies]
pytest = "7.4.3"
pytest-cov = "4.1.0"
pytest-recording = "0.13.0"
pytest-env = "^1.1.3"
responses = "0.24.1"
pytest-asyncio = "^0.23.6"
pytest-socket = "^0.7.0"
pytest-mock = "3.14.0"
pytest-xdist = "3.6.1"
pytest-timeout = "^2.3.1"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
